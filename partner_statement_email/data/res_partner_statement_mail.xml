<?xml version="1.0" ?>
<odoo>

    <!-- Mail template are declared in a NOUPDATE block
         so users can freely customize/delete them -->
    <!--<data noupdate="1">-->
    <data>

        <!--Email template -->
        <record id="email_template_activity_statement" model="mail.template">
            <field name="name">Customer Activity Statement - Send by Email</field>
            <field name="email_from">${(user.email and '%s &lt;%s&gt;' % (user.name, user.email) or '')|safe}</field>
            <field name="subject">Customer Statement from ${object.company_id.name}</field>
            <!--<field name="partner_to">${object.id}</field>-->
            <field name="model_id" ref="model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <!--<field name="report_template" ref="customer_activity_statement.customer_activity_statement_wizard_action"/>-->
            <!--<field name="report_name">Account Statement</field>-->
            <!--<field name="report_name">Statement_${(object.number or '').replace('/','_')}_${object.state == 'draft' and 'draft' or ''}</field>-->
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>
Dear ${object.name},
</p>

<p>
Attached is your statement.
</p>

<p>
Thank you,
</p>
% if user and user.signature:
    ${user.signature | safe}
% endif
]]></field>
        </record>


        <!--Email template -->
        <record id="email_template_outstanding_statement" model="mail.template">
            <field name="name">Customer Outstanding Statement - Send by Email</field>
            <field name="email_from">${(user.email and '%s &lt;%s&gt;' % (user.name, user.email) or '')|safe}</field>
            <field name="subject">Customer Statement from ${object.company_id.name}</field>
            <!--<field name="partner_to">${object.id}</field>-->
            <field name="model_id" ref="model_res_partner"/>
            <field name="auto_delete" eval="True"/>
            <!--<field name="report_template" ref="customer_outstanding_statement.customer_outstanding_statement_wizard_action"/>-->
            <!--<field name="report_name">Account Statement</field>-->
            <!--<field name="report_name">Statement_${(object.number or '').replace('/','_')}_${object.state == 'draft' and 'draft' or ''}</field>-->
            <field name="lang">${object.lang}</field>
            <field name="body_html"><![CDATA[
<p>Dear ${object.name},</p>

<p>
Attached is your statement.
</p>

<p>Thank you,</p>
% if user and user.signature:
    ${user.signature | safe}
% endif
]]></field>
        </record>


    </data>
</odoo>