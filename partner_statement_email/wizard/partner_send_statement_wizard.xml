<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="partner_send_statement_wizard" model="ir.ui.view">
            <field name="name">Partner Send Statement Wizard</field>
            <field name="model">partner.send.statement.wizard</field>
            <field name="arch" type="xml">
                <form name="Report Options">
                    <group name="main_info" string="Account">
                        <group>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="partner_id" readonly="1" />
                            <field name="recipient_partner_ids" widget="many2many_tags_email" placeholder="Add contacts to notify..."
                               context="{'force_email':True, 'show_email':True}" class="oe_inline" />
                        </group>
                    </group>
                    <group>
                        <group name="recipients">
                            <field name="credit" readonly="1" string="Account Balance"/>
                            <field name="statement_type" widget="radio" />
                        </group>
                        <group name="dates">
                            <field name="show_aging_buckets" attrs="{'invisible': [('statement_type', '=', 'customer_activity_statement.statement')]}"/>
                            <field name="date_start" attrs="{'invisible': [('statement_type', '=', 'customer_outstanding_statement.statement')]}"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <group string="Subscription">
                        <p>
                            Enable Subscribe if you want the customer to receive automatic monthly statement e-mails.
                        </p>
                    </group>
                    <group>
                        <group>
                            <field name="subscription" widget="checkbox"/>
                        </group>
                        <group>
                            <field name="send_first_of_month" />
                            <field name="date_next_send" attrs="{'invisible': [('subscription', '=', False)]}" />
                            <field name="dont_send_when_zero" widget="checkbox" attrs="{'invisible': [('subscription', '=', False)]}" />
                        </group>
                    </group>
                    <footer>
                        <button name="action_compose_mail" string="Compose E-mail" type="object" default_focus="1" class="oe_highlight"
                                help="Compose a one-time e-mail. If you have enabled Subscribe,
                                      a monthly subscription will also be created."/>

                        <button name="action_schedule_message" string="Schedule E-mail" type="object" attrs="{'invisible': [('subscription', '=', False)]}" class="oe_highlight"
                                help="A subscription will be created, and the first e-mail will be sent on the 'Next Date to Send'" />

                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window
            id="action_partner_send_statement_wizard"
            name="Send Statement to Customer"
            src_model="res.partner"
            res_model="partner.send.statement.wizard"
            view_type="form"
            view_mode="form"
            target="new"
            groups="account.group_account_invoice" />

    </data>
</openerp>