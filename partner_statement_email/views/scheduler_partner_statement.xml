<?xml version="1.0"?>
<openerp>
    <data>

        <!-- Form view -->
        <record id="view_scheduler_partner_statement_form" model="ir.ui.view">
            <field name="name">scheduler.partner.statement.form</field>
            <field name="model">scheduler.partner.statement</field>
            <field name="arch" type="xml">
                <form string="Schedule record">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "active"}'/>
                        </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1" /></h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id" />
                                <field name="company_id" invisible="1" />
                            </group>
                            <group>
                                <field name="user_id" />
                            </group>
                        </group>
                        <group>
                            <field name="recipient_ids" widget="many2many_tags_email" placeholder="Add contacts to notify..."
                               context="{'force_email':True, 'show_email':True}" class="oe_inline" />
                        </group>
                        <group>
                            <group>
                                <field name="statement_type" />
                                <field name="dont_send_when_zero" widget="checkbox" />
                                <field name="date_last_sent" />
                            </group>
                            <group>
                                <field name="show_aging_buckets" />
                                <field name="date_next_send" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- tree (list) view-->
        <record id="view_scheduler_partner_statement_tree" model="ir.ui.view">
            <field name="name">scheduler.partner.statement.tree</field>
            <field name="model">scheduler.partner.statement</field>
            <field name="arch" type="xml">
                <tree string="Schedule records" create="false">
                    <field name="partner_id" />
                    <field name="statement_type" />
                    <!--<field name="show_aging_buckets" />-->
                    <field name="date_last_sent" />
                    <field name="date_next_send" />
                    <field name="active" />
                </tree>
            </field>
        </record>

        <record id="view_scheduler_partner_statement_filter" model="ir.ui.view">
            <field name="name">scheduler.partner.statement.select</field>
            <field name="model">scheduler.partner.statement</field>
            <field name="arch" type="xml">
                <search string="Search Payslips">
                    <field name="partner_id" string="Partner"/>
                    <!--<field name="date_from"/>-->
                    <!--<field name="date_payment"/>-->
                    <!--<filter icon="terp-document-new" string="Draft" domain="[('state','=','draft')]" help="Draft Slip"/>-->
                    <!--<filter icon="terp-camera_test" string="Done" domain="[('state','=','done')]" help="Done Slip"/>-->
                    <!--<field name="employee_id"/>-->
                    <!--<field name="payslip_run_id"/>-->
                    <!--<group expand="0" string="Group By">-->
                        <!--<filter string="Employees" icon="terp-personal" name="employee_id" context="{'group_by':'employee_id'}"/>-->
                        <!--<filter string="Payslip Batch" name="payslip_run_id" icon="terp-folder-orange" context="{'group_by':'payslip_run_id'}"/>-->
                        <!--<filter string="Companies" name="company_id" groups="base.group_multi_company" icon="terp-go-home" context="{'group_by':'company_id'}"/>-->
                        <!--<filter string="States" name="state" icon="terp-stock_effects-object-colorize" context="{'group_by':'state'}"/>-->
                        <!--<filter string="Payment Date" name="date_payment" context="{'group_by':'date_payment'}"/>-->
                    <!--</group>-->
                </search>
            </field>
        </record>

        <record id="action_view_scheduler_record_form" model="ir.actions.act_window">
            <field name="name">Statement Subscriptions</field>
            <field name="res_model">scheduler.partner.statement</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_scheduler_partner_statement_tree"/>
            <!--<field name="search_view_id" ref="view_scheduler_partner_statement_filter"/>-->
        </record>

        <menuitem name="Statement Subscriptions" action="action_view_scheduler_record_form" id="statement_subscriptions" parent="account.menu_finance_receivables" groups="account.group_account_invoice"/>

    </data>
</openerp>
